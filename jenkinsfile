pipeline {
    agent any

  environment {
        NODEJS_HOME = tool 'nodeJs'
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Unit Tests') {
            steps {
                sh 'npm run test'
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts 'dist/**/*'
            }
        }

        stage('Deploy') {
            steps {
               echo "deploy"
            }
        }

        stage('Post-Build Actions') {
            steps {
                echo "Post-Build Actions"
            }
        }
    }

    post {
        always {
          
            cleanWs()
        }
    }
}